.searchbar

  &__container
    display flex
    align-items center
    justify-content center
    height 10rem
    box-shadow 0 0.5rem 0.2rem rgba(0, 0, 0, 0.05)

  &__wrapper
    display flex
    align-items center
    justify-content center
    width 50rem
    border-radius 1rem
    overflow hidden

  &__input
    display block
    width 100%
    height 5rem
    background-color #eee
    color #444
    padding 1rem 2rem
    font-size 1.6rem
    font-weight bold
    font-family sans-serif

  &__button
    padding 1rem
    height 5rem
    width 5rem
    cursor pointer
    background-color #3498db
    color #fff

    &__icon
      &--hovered
        animation-name popUp
        animation-duration .5s

      &--clicked
        animation-name popDown
        animation-duration .2s
    
@keyframes popUp
  from
    transform 0
  50%
    transform scale(1.2)
  to
    transform 0

@keyframes popDown
  from
    transform 0
  50%
    transform scale(0.9)
  to
    transform 0
